    <th id="total6" colspan="2"></th>
    <th id="total7" colspan="2"></th>
    <th id="total8" colspan="2"></th>
    <th id="total9" colspan="2"></th>
    <th id="total10" colspan="2"></th>
  </tr>
</table>

<form action="/throwBall" method="post">
  <input type="submit" value="Throw ball">
</form>