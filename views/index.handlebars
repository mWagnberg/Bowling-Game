<h1>Bowling Game</h1>
<table border="1 solid black" style="width: 50%">
  <tr>
    <th colspan="2" class="headerSize">1</th>
    <th colspan="2" class="headerSize">2</th>
    <th colspan="2" class="headerSize">3</th>
    <th colspan="2" class="headerSize">4</th>
    <th colspan="2" class="headerSize">5</th>
    <th colspan="2" class="headerSize">6</th>
    <th colspan="2" class="headerSize">7</th>
    <th colspan="2" class="headerSize">8</th>
    <th colspan="2" class="headerSize">9</th>
    <th colspan="2" class="headerSize">10</th>
  </tr>
  <tr>
    <th id="cell1" class="cellSize">{{score.[0]}}</th>
    <th id="cell2" class="cellSize">{{score.[1]}}</th>
    <th id="cell3" class="cellSize">{{score.[2]}}</th>
    <th id="cell4" class="cellSize">{{score.[3]}}</th>
