    <th id="cell8" class="cellSize">{{score.[7]}}</th>
    <th id="cell9" class="cellSize">{{score.[8]}}</th>
    <th id="cell10" class="cellSize">{{score.[9]}}</th>
    <th id="cell11" class="cellSize">{{score.[10]}}</th>
    <th id="cell12" class="cellSize">{{score.[11]}}</th>
    <th id="cell13" class="cellSize">{{score.[12]}}</th>
    <th id="cell14" class="cellSize">{{score.[13]}}</th>
    <th id="cell15" class="cellSize">{{score.[14]}}</th>
    <th id="cell16" class="cellSize">{{score.[15]}}</th>
    <th id="cell17" class="cellSize">{{score.[16]}}</th>
    <th id="cell18" class="cellSize">{{score.[17]}}</th>
    <th id="cell19" class="cellSize">{{score.[18]}}</th>
    <th id="cell20" class="cellSize">{{score.[19]}}</th>
